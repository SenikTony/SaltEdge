<div class="relative overflow-x-auto shadow-md sm:rounded-lg">
  <table class="w-full text-sm text-left text-gray-500">
    <caption class="p-5 text-lg font-semibold text-left text-gray-900 bg-white">
      Connections <%= link_to "Add +", new_connections_path, class: "text-white font-extralight bg-indigo-600 hover:bg-indigo-500 focus:ring-4 focus:ring-indigo-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2" %>
      <p class="mt-1 text-sm font-normal text-gray-500">
        A Connection represents a permanent connection of a specific customer to a bank.
      </p>
    </caption>
    <% if @connections.present? %>
      <thead class="text-xs text-gray-700 uppercase bg-gray-50">
        <tr>
          <th scope="col" class="px-6 py-3">
            #ID
          </th>
          <th scope="col" class="px-6 py-3">
            Provider
          </th>
          <th scope="col" class="px-6 py-3">
            Status
          </th>
          <th scope="col" class="px-6 py-3">
            Updated at
          </th>
          <th scope="col" class="px-6 py-3">
            Actions
          </th>
        </tr>
      </thead>
      <tbody>
        <% @connections.each do |connection| %>
          <tr class="bg-white border-b">
            <td class="px-6 py-4">
              <%= connection.connection_id %>
            </td>
            <td class="px-6 py-4">
              <%= connection.provider_name %>
            </td>
            <td class="px-6 py-4">
              <%= connection.status %>
            </td>
            <td class="px-6 py-4">
              <%= connection.balance_updated_at %>
            </td>
            <td class="px-6 py-4">
              <%# Buttons for refresh, reconnect and remove connection %>
              <%= button_to "Ref", connections_path(id: connection.id, kind: "refresh"), method: :patch %>
              <%= button_to "Rec", connections_path(id: connection.id, kind: "reconnect"), method: :patch %>
              <%= link_to "Rem", "#" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>
